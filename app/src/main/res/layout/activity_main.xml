<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5D63D1"
            android:paddingTop="92dp"
            android:paddingBottom="63dp"
            android:paddingStart="23dp"
            android:paddingEnd="23dp"
            android:layout_marginBottom="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/runner"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/headerTextView"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="38dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="HALLO! SELAMAT BEROLAHRAGA"/>
        </LinearLayout>

        <TextView
            android:id="@+id/dataLatihanTextView"
            android:textColor="#333333"
            android:textSize="20sp"
            android:layout_marginBottom="21dp"
            android:layout_marginStart="35dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Data Latihan"/>

        <LinearLayout
            android:id="@+id/dataLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_shadow"
            android:paddingTop="39dp"
            android:paddingBottom="55dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:elevation="28dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/langkahLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/total_jarak"
                android:paddingVertical="9dp"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:textColor="#333333"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Total Langkah"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/totalLangkahTextView"
                    android:textColor="#333333"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="0"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"/>

                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:textColor="#333333"
                        android:textSize="11sp"
                        android:layout_marginStart="1dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Steps"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/durasiLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/total_jarak"
                android:paddingVertical="7dp"
                android:paddingStart="34dp"
                android:paddingEnd="34dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:textColor="#333333"
                    android:textSize="17sp"
                    android:layout_marginEnd="4dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Durasi Lari"/>

                <TextView
                    android:id="@+id/durasiLariTextView"
                    android:textColor="#333333"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="0"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="#333333"
                        android:textSize="11sp"
                        android:layout_marginStart="2dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Menit"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/totalJarakLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/total_jarak"
                android:paddingVertical="7dp"
                android:paddingStart="34dp"
                android:paddingEnd="34dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:textColor="#333333"
                    android:textSize="17sp"
                    android:layout_marginEnd="4dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Total Jarak"/>

                <TextView
                    android:id="@+id/totalJarakTextView"
                    android:textColor="#333333"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="0"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="#333333"
                        android:textSize="11sp"
                        android:layout_marginStart="2dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Kilometer"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/pauseButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_pause"
            android:text="Pause"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/startButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_mulai"
            android:text="Mulai"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/stopButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_akhiri"
            android:text="Berhenti"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:layout_marginStart="8dp"/>

    </LinearLayout>
</LinearLayout>
